<div class="h-screen w-full flex flex-col justify-center items-center">
  <div class="max-w-xl w-full flex flex-col">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mb-4">
        <%= f.label 'Correo' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'w-full rounded-md' %>
      </div>

      <div class="field mb-4">
        <%= f.label 'ContraseÃ±a' %><br />
        <%= f.password_field :password, autocomplete: "current-password", :class => 'w-full rounded-md' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-4">
          <%= f.check_box :remember_me %>
          <%= f.label 'Recuerdame' %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Iniciar Sesion", :class => 'bg-indigo-500 text-white w-full py-4 rounded-md cursor-pointer hover:bg-indigo-700' %>
      </div>
      <% end %> 
  </div>
</div>


